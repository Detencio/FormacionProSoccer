{
  "name": "formacion-pro-soccer",
  "version": "1.0.0",
  "description": "Plataforma digital integral para fútbol amateur y de barrio",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run build",
    "clean": "rm -rf .next out dist",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "install:clean": "npm run clean:all && npm install",
    "docker:build": "docker build -t formacion-pro-soccer .",
    "docker:run": "docker run -p 3000:3000 formacion-pro-soccer",
    "docs:dev": "next dev --port 3001",
    "docs:build": "next build && next export -o docs",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "14.2.30",
    "react": "^18",
    "react-dom": "^18",
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "zustand": "^4.4.7",
    "axios": "^1.6.2",
    "react-hook-form": "^7.48.2",
    "@hookform/resolvers": "^3.3.2",
    "zod": "^3.22.4",
    "lucide-react": "^0.294.0",
    "clsx": "^2.0.0",
    "class-variance-authority": "^0.7.0",
    "framer-motion": "^10.16.16",
    "react-hot-toast": "^2.4.1",
    "date-fns": "^2.30.0",
    "react-query": "^3.39.3",
    "swr": "^2.2.4"
  },
  "devDependencies": {
    "eslint": "^8",
    "eslint-config-next": "14.2.30",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.40.0",
    "@playwright/test": "^1.40.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@next/bundle-analyzer": "^14.2.30",
    "cross-env": "^7.0.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "futbol",
    "equipos",
    "generador",
    "formacion",
    "nextjs",
    "react",
    "typescript",
    "tailwindcss"
  ],
  "author": "Formación Pro Soccer Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/formacion-pro-soccer.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/formacion-pro-soccer/issues"
  },
  "homepage": "https://formacionprosoccer.com"
}
